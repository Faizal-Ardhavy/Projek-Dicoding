<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProjectDicoding" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">#FFFFFF</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name = "HeaderTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">18dp</item>
        <item name="android:textSize">26dp</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name = "Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="fontFamily">@font/lato</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name = "Text.Small">
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name = "Text.Center">
        <item name="android:gravity">center</item>
    </style>

    <style name = "Text.DetailTitle">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textSize">22dp</item>
        <item name="fontFamily">@font/lato_bold</item>
    </style>

    <style name = "Text.DetailTitle.Content">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name = "Text.DetailAttribute">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textSize">20dp</item>
        <item name="fontFamily">@font/lato_bold</item>
    </style>

    <style name = "Text.DetailAttribute.Sub">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">16dp</item>
        <item name="fontFamily">@font/lato</item>
    </style>

    <style name="imgBtnGeneral">
        <item name="android:layout_width">68dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>
</resources>